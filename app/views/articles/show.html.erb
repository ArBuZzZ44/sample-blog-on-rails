<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
</p>
<br />

<h3>Comments:</h3>
<% @article.comments.each do |comment| %>
	<p>
		<h4><%= comment.author %></h4>
		<br />
		<%= comment.body %>
		<br />
		<br />
		<span style="font-size: 75%; color: #999;">At <%= comment.created_at %></span>
	</p>
	<hr />
<% end %>

<p>
	<h4>Write your comment!</h4>
	<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %><br />
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_field :body %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	<% end %>
</p>