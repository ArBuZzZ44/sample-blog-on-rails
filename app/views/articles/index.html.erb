<h1>Articles:</h1>
<br />
<% @articles.each do |art| %>
	<p>
		<h3><%= art.title %></h3>
		<br />
		<%= art.text %>
		<br />
		<br />
		<span style="font-size: 75%; color: #999;">Added at <%= art.created_at %></span>
	</p>
	
	<p>
		<%= link_to 'Show', article_path(art) %> |
		<%= link_to 'Edit', edit_article_path(art) %> |
		<%= button_to 'Delete', article_path(art), method: :delete, data: {'turbo-confirm': 'Are you sure?'} %> <!--  link_to 'Delete', article_path(art), data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } -->
	</p>
	<hr />
<% end %>